#!/bin/sh
# simple script for setting a random wallpaper

XDG_PICTURES_DIR="$(xdg-user-dir PICTURES)"
img="$(find "$XDG_PICTURES_DIR" -type f -iname "*.jp*g" -o -iname "*.png" | shuf -n 1)"

xwallpaper --zoom "$img"
printf "[%s] set wallpaper to %s\n" "$(date -Is)" "$img" >> "${XDG_CACHE_HOME:-$HOME/.cache}/randwall"
