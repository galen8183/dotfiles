set hidden
set previewer ~/.config/lf/previewer
set cleaner ~/.config/lf/cleaner

map y
map yy copy
map yp $printf '%s' "$fx"  | xclip -sel clip
map yn $basename -a -- $fx | head -c-1 | xclip -sel clip
map yd $dirname -- "$f"    | head -c-1 | xclip -sel clip

map ' ' select

map <c-n> $nsxiv "$( { [ -d "$f" ] && echo "$f"; } || dirname "$f")"
